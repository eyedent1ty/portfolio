<section id="artistry" class="px-5 py-4 md:h-screen">
  <main
    class="space-y-6 md:flex md:flex-row md:justify-between md:items-center md:h-full"
  >
    <div
      class="md:w-5/12 md:h-4/5 md:flex md:flex-col md:gap-y-8 lg:gap-y-12 xl:gap-y-16 2xl:gap-y-20"
    >
      <h2
        id="sub-heading"
        class="text-3xl uppercase mt-10 -translate-x-full transition-transform ease-out duration-1000 md:mt-0 sm:text-4xl md:text-5xl lg:text-6xl xl:text-7xl 2xl:8xl"
      >
        <span class="block">The Art</span>That I Do
        <p
        id="artistry-sub-title"
        class="text-sm inline-block -translate-x-full transition-translate- duration-1000 sm:text-base md:text-lg lg:text-xl xl:text-2xl 2xl:text-3xl"
      >
        I'm a <span class="border-b-2">Vue developer</span>
        <svg
          class="inline-block"
          viewBox="0 0 128 128"
          width="35"
          height="35"
          data-v-7f316e73=""
          ><path
            fill="#42b883"
            d="M78.8,10L64,35.4L49.2,10H0l64,110l64-110C128,10,78.8,10,78.8,10z"
            data-v-7f316e73=""></path><path
            fill="#35495e"
            d="M78.8,10L64,35.4L49.2,10H25.6L64,76l38.4-66H78.8z"
            data-v-7f316e73=""></path></svg
        >
      </p>
      </h2>
    </div>

    <div class="h-full md:w-5/12 md:flex md:flex-col md:justify-end md:gap-y-10">
      <p
        id="description"
        class="text-sm mb-10 translate-x-full transition-transform ease-out duration-1000 md:mb-10 sm:text-base md:text-lg lg:text-xl xl:text-2xl 2xl:text-3xl"
      >
        I specialize in developing web applications that harmonize
        state-of-the-art coding techniques with timeless web development
        principles, creating digital solutions that seamlessly marry innovation
        with reliability and user-friendly design.
      </p>
    </div>
  </main>
  <script>
    const subHeading = document.getElementById('sub-heading');
    const artistrySubTitle = document.getElementById('artistry-sub-title')
    const description = document.getElementById('description');

    const intersectionObserver = new IntersectionObserver((entries) => {
      entries.forEach((entry) => {
        if (entry.isIntersecting) {
          entry.target.classList.remove('-translate-x-full');

          if (entry.target.getAttribute('id') === 'description') {
            entry.target.classList.remove('translate-x-full');
          }

        } else {
          entry.target.classList.add('-translate-x-full');

          if (entry.target.getAttribute('id') === 'description') {
            entry.target.classList.add('translate-x-full')
          }
        }
      });
    });

    const hiddenElements = [subHeading, artistrySubTitle, description];

    hiddenElements.forEach((hiddenElement) =>
      intersectionObserver.observe(hiddenElement)
    );
  </script>
</section>

