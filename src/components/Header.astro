---
import myProfile from '../assets/my-profile.jpg';
---

<section id="header" class="px-5 py-14">
  <main class="relative">
    <span class="absolute left-0 top-0 -translate-y-3">John Daniel</span>
    <figure>
      <figcaption>
        <h1 class="text-center translate-y-5">
          <span class="text-5xl uppercase">Aspirer</span>
          <span class="text-5xl uppercase">Dreamer</span>
          <span class="text-5xl uppercase">Developer</span>
        </h1>
      </figcaption>
      <img class="h-40 mx-auto" src={myProfile.src} alt="Picture of myself smiling" />
    </figure>
    <span class="absolute right-0 bottom-0 translate-y-10">Developer</span>
  </main>
</section>
